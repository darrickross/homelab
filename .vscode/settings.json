{
  "ansible.lightspeed.enabled": false,
  "ansible.lightspeed.suggestions.enabled": false,
  "ansible.python.interpreterPath": "/usr/bin/python3",
  "cSpell.enabledFileTypes": {
    "nix": true
  },
  "cSpell.words": [
    "-cacerts",
    "-clcerts",
    "-nocerts",
    "-nocrypt",
    "-noenc",
    "-nokeys",
    "-noout",
    "-passin",
    "-pubkey",
    "ahci",
    "autoclean",
    "automagically",
    "autoremove",
    "betapassword",
    "blockinfile",
    "bootable",
    "BOOTX",
    "certlm.msc",
    "certsrv.msc",
    "checkconf",
    "cliconf",
    "cmds",
    "codel",
    "coreutils",
    "dateext",
    "dbus",
    "debconf",
    "delaycompress",
    "direnv",
    "distro",
    "dmask",
    "dpkg",
    "drwxr",
    "DTLSHandlerComponent",
    "ECDH_P",
    "endfor",
    "envrc",
    "execer",
    "FGDSIpNetDriver",
    "findutils",
    "fmask",
    "gnugrep",
    "homelab",
    "HomeLab",
    "httpapi",
    "iface",
    "inet",
    "internationalisation",
    "journalctl",
    "keymap",
    "libpve",
    "listchanges",
    "Malloc",
    "missingok",
    "mountpoint",
    "multihome",
    "netconf",
    "networkd",
    "networkmanager",
    "Nixos",
    "nixpkgs",
    "noprefixroute",
    "noqueue",
    "notifempty",
    "nvme",
    "opensource",
    "patchelf",
    "pihole",
    "pipefail",
    "PKCS",
    "pkcs12",
    "pkcs8",
    "pkgs",
    "pkrvars",
    "pointopoint",
    "polkit",
    "proto",
    "proxmoxlib",
    "pveproxy",
    "pveversion",
    "qdisc",
    "qlen",
    "resetup",
    "resholve",
    "selectattr",
    "SIGABRT",
    "steamcmd",
    "sysinit",
    "terraformrc",
    "tfstate",
    "tfvars",
    "tmpfiles",
    "usbhid",
    "Valheim",
    "vfat",
    "vmbr",
    "vtype",
    "xhci",
    "xrdp"
  ],
  "files.associations": {
    "*plays.yml": "ansible",
    "*init.yml": "yaml"
  },
  "files.eol": "\n",
  // Make sure to install nixfmt
  // https://github.com/NixOS/nixfmt/releases
  "nix.formatterPath": "nixfmt",
  "[ansible]": {
    "editor.defaultFormatter": "redhat.ansible",
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "comments": true,
      "other": true,
      "strings": true
    },
    "editor.autoIndent": "advanced"
  },
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[nix]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  }
}
