{
  "ansible.lightspeed.enabled": false,
  "ansible.lightspeed.suggestions.enabled": false,
  "ansible.python.interpreterPath": "/bin/python3.11",
  "cSpell.enabledFileTypes": {
    "nix": true
  },
  "cSpell.words": [
    "autoclean",
    "automagically",
    "autoremove",
    "betapassword",
    "blockinfile",
    "bootable",
    "BOOTX",
    "checkconf",
    "cmds",
    "codel",
    "coreutils",
    "dateext",
    "dbus",
    "debconf",
    "delaycompress",
    "dpkg",
    "drwxr",
    "DTLSHandlerComponent",
    "endfor",
    "execer",
    "FGDSIpNetDriver",
    "findutils",
    "gnugrep",
    "HomeLab",
    "iface",
    "inet",
    "internationalisation",
    "journalctl",
    "keymap",
    "Malloc",
    "missingok",
    "mountpoint",
    "multihome",
    "networkmanager",
    "Nixos",
    "nixpkgs",
    "noprefixroute",
    "noqueue",
    "notifempty",
    "opensource",
    "patchelf",
    "pihole",
    "pipefail",
    "pkgs",
    "pointopoint",
    "polkit",
    "proto",
    "proxmoxlib",
    "pveproxy",
    "pveversion",
    "qdisc",
    "qlen",
    "resetup",
    "resholve",
    "selectattr",
    "SIGABRT",
    "steamcmd",
    "sysinit",
    "tmpfiles",
    "Valheim",
    "vmbr",
    "vtype"
  ],
  "files.associations": {
    "*plays.yml": "ansible",
    "*init.yml": "yaml"
  },
  "files.eol": "\n",
  // Make sure to install nixfmt
  // https://github.com/NixOS/nixfmt/releases
  "nix.formatterPath": "nixfmt",
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[nix]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "[terraform]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform-vars]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform"
  }
}
